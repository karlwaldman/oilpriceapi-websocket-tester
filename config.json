        "canada_rigs": { "enabled": true, "label": "Canada Rig Count" },
        "international_rigs": { "enabled": true, "label": "Intl Rig Count" }
      },
      "frac_spreads": {
        "permian": { "enabled": true, "label": "Permian Frac Spreads" },
        "eagle_ford": { "enabled": true, "label": "Eagle Ford Frac" },
        "bakken": { "enabled": true, "label": "Bakken Frac Spreads" }
