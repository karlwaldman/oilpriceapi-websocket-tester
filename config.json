{
  "connection": {
    "url": "wss://api.oilpriceapi.com/cable",
    "localUrl": "ws://localhost:5000/cable",
    "channel": "EnergyPricesChannel",
    "timeoutMs": 30000,
    "maxReconnectAttempts": 5
  },
  "display": {
    "refreshMs": 500,
    "maxLogLines": 8
  },
  "measures": {
    "oil": {
      "brent": {
        "enabled": true,
        "label": "Brent Crude",
        "unit": "$",
        "suffix": "/bbl"
      },
      "wti": {
        "enabled": true,
        "label": "WTI Crude",
        "unit": "$",
        "suffix": "/bbl"
      }
    },
    "natural_gas": {
      "us": {
        "enabled": true,
        "label": "US Natural Gas",
        "unit": "$",
        "suffix": "/MMBtu"
      },
      "uk": {
        "enabled": true,
        "label": "UK Natural Gas",
        "unit": "",
        "suffix": "p/therm"
      },
      "eu": {
        "enabled": true,
        "label": "EU Natural Gas",
